<p>post list</p>

<h1>Showing selected Post</h1>
<p>
 Title: <%= @post.title %>
</p>
<p>
 Text: <%= @post.text %>
</p>

<div class="post_show_container">
    <div class="show_header">
        <h1>Post <span><%=@post.id %></span> by <%= @user.name%></h1>
        <p>Comments: <%= @post.comments_counter || 0%></p>
        <p>likes: <%= @post.likes_counter || 0%></p>
    </div>

    <div class="post_details">
        <p>Post Text: <%= @post.text%></p>
    </div>

    <div class="action_div">
     <%= render 'posts/delete' %>
</div>

    <%= render "likes/like"%>

    <div class="comment_holder">
    <% @post.recent_comments.each do |comments| %>
        <p>Comment: <%= comments.text || "No comments added"%></p>
        <%end%>
    </div>

    <%= render "comments/form"%>

    <div class="comment_holder">
    <h5>All comments</h5>
    <% @post.all_comments.each do |comments| %>
        <p>Comment: <%= comments.text || "No comments added"%></p>
        <%end%>
    </div>


</div>